{
  "extends": "@strapi/typescript-utils/lib/configs/server",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "lib": [ "es2015" ]
  },
  "include": [
    "./",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules/",
    "build/",
    "dist/",
    ".cache/",
    ".tmp/",
    "src/admin/",
    "**/*.test.ts",
    "src/plugins/**"
  ],
  "resolveJsonModule": true,
}
